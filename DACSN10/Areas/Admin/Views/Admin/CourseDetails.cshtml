@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[title]').tooltip();
        });

        function approveCourse(courseId) {
            Swal.fire({
                title: 'Duyệt khóa học?',
                text: 'Bạn có chắc chắn muốn duyệt khóa học này?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#10b981',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Duyệt',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();

                    $.post('/Admin/ApproveCourse', {
                        id: courseId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    })
                    .done(function(response) {
                        hideLoading();
                        if (response.success) {
                            showSuccess(response.message);
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showError(response.message);
                        }
                    })
                    .fail(function() {
                        hideLoading();
                        showError('Có lỗi xảy ra khi duyệt khóa học!');
                    });
                }
            });
        }

        function deleteCourse(courseId) {
            confirmDelete('Xóa khóa học?',
                'Bạn có chắc chắn muốn xóa khóa học này? Tất cả dữ liệu liên quan sẽ bị xóa!',
                function() {
                    showLoading();

                    $.post('/Admin/Admin/DeleteCourse', {
                        id: courseId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    })
                    .done(function(response) {
                        hideLoading();
                        if (response.success) {
                            showSuccess(response.message);
                            setTimeout(() => window.location.href = '/Admin/Courses', 1500);
                        } else {
                            showError(response.message);
                        }
                    })
                    .fail(function() {
                        hideLoading();
                        showError('Có lỗi xảy ra khi xóa khóa học!');
                    });
                }
            );
        }

        function duplicateCourse(courseId) {
            Swal.fire({
                title: 'Nhân bản khóa học',
                input: 'text',
                inputLabel: 'Tên khóa học mới',
                inputPlaceholder: 'Nhập tên cho khóa học được nhân bản...',
                showCancelButton: true,
                confirmButtonText: 'Nhân bản',
                cancelButtonText: 'Hủy',
                inputValidator: (value) => {
                    if (!value) {
                        return 'Vui lòng nhập tên khóa học!'
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();

                    setTimeout(() => {
                        hideLoading();
                        showSuccess('Đã nhân bản khóa học thành công!');
                        console.log(`Duplicating course ${courseId} with name: ${result.value}`);
                    }, 2000);
                }
            });
        }

        function exportCourse(courseId) {
            showLoading();

            setTimeout(() => {
                hideLoading();
                showSuccess('Đã xuất dữ liệu khóa học thành công!');
                console.log(`Exporting course ${courseId}`);
            }, 1500);
        }

        function addLesson(courseId) {
            window.location.href = `/Admin/Admin/Lessons/Create?courseId=${courseId}`;
        }

        function editLesson(lessonId) {
            window.location.href = `/Admin/Admin/Lessons/Edit/${lessonId}`;
        }

        function deleteLesson(lessonId) {
            confirmDelete('Xóa bài học?',
                'Bạn có chắc chắn muốn xóa bài học này?',
                function() {
                    showLoading();

                    setTimeout(() => {
                        hideLoading();
                        showSuccess('Đã xóa bài học thành công!');
                        location.reload();
                    }, 1000);
                }
            );
        }

        function addQuiz(courseId) {
            window.location.href = `/Admin/Quizzes/Create?courseId=${courseId}`;
        }

        function editQuiz(quizId) {
            window.location.href = `/Admin/Quizzes/Edit/${quizId}`;
        }

        function deleteQuiz(quizId) {
            confirmDelete('Xóa bài kiểm tra?',
                'Bạn có chắc chắn muốn xóa bài kiểm tra này? Tất cả kết quả sẽ bị xóa!',
                function() {
                    showLoading();

                    setTimeout(() => {
                        hideLoading();
                        showSuccess('Đã xóa bài kiểm tra thành công!');
                        location.reload();
                    }, 1000);
                }
            );
        }

        function viewQuizResults(quizId) {
            window.location.href = `/Admin/QuizResults/${quizId}`;
        }

        function exportStudents(courseId) {
            showLoading();

            setTimeout(() => {
                hideLoading();
                showSuccess('Đã xuất danh sách học viên thành công!');
                console.log(`Exporting students for course ${courseId}`);
            }, 1000);
        }

        function sendMessageToStudents(courseId) {
            Swal.fire({
                title: 'Gửi thông báo đến học viên',
                html: `
                    <div class="text-start">
                        <div class="mb-3">
                            <label class="form-label">Nội dung</label>
                            <textarea class="form-control" id="messageContent" rows="4" placeholder="Nhập nội dung thông báo..."></textarea>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="sendEmail" checked>
                            <label class="form-check-label" for="sendEmail">
                                Gửi qua email
                            </label>
                        </div>
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'Gửi thông báo',
                cancelButtonText: 'Hủy',
                preConfirm: () => {
                    const title = document.getElementById('messageTitle').value;
                    const content = document.getElementById('messageContent').value;
                    const sendEmail = document.getElementById('sendEmail').checked;

                    if (!title || !content) {
                        Swal.showValidationMessage('Vui lòng điền đầy đủ thông tin!');
                        return false;
                    }

                    return { title, content, sendEmail };
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    showLoading();

                    setTimeout(() => {
                        hideLoading();
                        showSuccess('Đã gửi thông báo đến tất cả học viên!');
                        console.log(`Sending message to students of course ${courseId}:`, result.value);
                    }, 2000);
                }
            });
        }

        function viewStudentProgress(userId, courseId) {
            window.location.href = `/Admin/Admin/StudentProgress/${userId}/${courseId}`;
        }

        function contactStudent(userId) {
            window.location.href = `/Admin/Admin/Students/Details/${userId}`;
        }

        function viewAnalytics(courseId) {
            window.location.href = `/Admin/CourseAnalytics/${courseId}`;
        }

        function previewCourse(courseId) {
            window.open(`/Course/Details/${courseId}`, '_blank');
        }
    </script>

    @Html.AntiForgeryToken()
}