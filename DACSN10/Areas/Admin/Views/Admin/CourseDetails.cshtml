@model DACSN10.Models.Course

@{
    ViewData["Title"] = "Chi tiết khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="/Admin/Courses">Quản lý khóa học</a></li>
    <li class="breadcrumb-item active">Chi tiết khóa học</li>
}

@section Styles {
    <style>
        .course-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .course-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: translate(50px, -50px);
        }
        
        .course-info-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f1f5f9;
        }
        
        .info-item:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 500;
            color: var(--admin-secondary);
        }
        
        .info-value {
            font-weight: 600;
            color: var(--admin-dark);
        }
        
        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        .lesson-item, .quiz-item {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
        }
        
        .lesson-item:hover, .quiz-item:hover {
            border-color: var(--admin-primary);
            background: rgba(59, 130, 246, 0.05);
        }
        
        .student-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: #f8fafc;
            border-radius: 8px;
            margin-bottom: 0.75rem;
        }
        
        .student-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }
        
        .progress-bar-custom {
            height: 8px;
            border-radius: 4px;
            background: #e2e8f0;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #10b981 0%, #059669 100%);
            border-radius: 4px;
            transition: width 0.3s ease;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            color: white;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--admin-secondary);
            font-size: 0.9rem;
        }

        .action-buttons {
            position: sticky;
            top: 20px;
            z-index: 100;
        }

        .tab-content-custom {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .category-tag {
            display: inline-block;
            background: rgba(59, 130, 246, 0.1);
            color: var(--admin-primary);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            margin: 0.25rem;
        }
    </style>
}

<!-- Course Header -->
<div class="course-header" data-aos="fade-up">
    <div class="row align-items-center">
        <div class="col-md-8">
            <div class="d-flex align-items-center mb-3">
                @switch (Model.TrangThai)
                {
                    case "Active":
                        <span class="status-badge bg-success me-3">
                            <i class="fas fa-play-circle me-1"></i>Hoạt động
                        </span>
                        break;
                    case "Pending":
                        <span class="status-badge bg-warning me-3">
                            <i class="fas fa-clock me-1"></i>Chờ duyệt
                        </span>
                        break;
                    case "Inactive":
                        <span class="status-badge bg-secondary me-3">
                            <i class="fas fa-pause-circle me-1"></i>Tạm dừng
                        </span>
                        break;
                    default:
                        <span class="status-badge bg-secondary me-3">@Model.TrangThai</span>
                        break;
                }

                <span class="opacity-75">
                    <i class="fas fa-calendar me-1"></i>@Model.NgayTao.ToString("dd/MM/yyyy")
                </span>
            </div>

            <h2 class="mb-3">@Model.TenKhoaHoc</h2>
            <p class="mb-3 opacity-90">@Model.MoTa</p>

            <div class="d-flex align-items-center gap-4">
                <div>
                    <i class="fas fa-user me-2"></i>
                    <strong>@Model.User?.HoTen</strong>
                </div>
                <div>
                    <i class="fas fa-tag me-2"></i>
                    <strong>@Model.Gia.ToString("N0")₫</strong>
                </div>
            </div>
        </div>

        <div class="col-md-4 text-end">
            <div class="action-buttons">
                <a href="/Admin/Admin/EditCourse/@Model.CourseID" class="btn btn-light me-2">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
                @if (Model.TrangThai == "Pending")
                {
                    <button class="btn btn-success me-2" onclick="approveCourse(@Model.CourseID)">
                        <i class="fas fa-check me-1"></i>Duyệt
                    </button>
                }
                <div class="dropdown d-inline-block">
                    <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="#" onclick="duplicateCourse(@Model.CourseID)">
                                <i class="fas fa-copy me-2"></i>Nhân bản
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="exportCourse(@Model.CourseID)">
                                <i class="fas fa-download me-2"></i>Xuất dữ liệu
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" onclick="deleteCourse(@Model.CourseID)">
                                <i class="fas fa-trash me-2"></i>Xóa khóa học
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics -->
<div class="stats-grid" data-aos="fade-up" data-aos-delay="100">
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-number text-primary">@(Model.Enrollments?.Count ?? 0)</div>
        <div class="stat-label">Học viên đăng ký</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <i class="fas fa-play-circle"></i>
        </div>
        <div class="stat-number text-success">@(Model.Lessons?.Count ?? 0)</div>
        <div class="stat-label">Bài học</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
            <i class="fas fa-question-circle"></i>
        </div>
        <div class="stat-number text-warning">@(Model.Quizzes?.Count ?? 0)</div>
        <div class="stat-label">Bài kiểm tra</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
            <i class="fas fa-dollar-sign"></i>
        </div>
        <div class="stat-number text-info">
            @{
                var revenue = (Model.Enrollments?.Count ?? 0) * Model.Gia;
            }
            @((revenue / 1000000m).ToString("F1"))M
        </div>
        <div class="stat-label">Doanh thu (ước tính)</div>
    </div>
</div>

