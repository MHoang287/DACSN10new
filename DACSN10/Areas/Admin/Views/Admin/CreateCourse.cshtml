@model DACSN10.Models.Course
@{
    ViewData["Title"] = "Tạo khóa học mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as SelectList;
    var teachers = ViewBag.Teachers as SelectList;
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="/Admin/Admin/Courses">Quản lý khóa học</a></li>
    <li class="breadcrumb-item active">Tạo khóa học mới</li>
}

@section Styles {
    <style>
        .form-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid #e2e8f0;
        }

            .form-section:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .section-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .section-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: white;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--admin-dark);
            margin: 0;
        }

        .section-description {
            color: var(--admin-secondary);
            font-size: 0.9rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--admin-dark);
            margin-bottom: 0.5rem;
        }

        .required-field {
            color: var(--admin-danger);
        }

        .form-control, .form-select {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--admin-primary);
                box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.1);
            }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .category-item {
            padding: 1rem;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .category-item:hover {
                border-color: var(--admin-primary);
                background: rgba(59, 130, 246, 0.05);
            }

            .category-item.selected {
                border-color: var(--admin-primary);
                background: rgba(59, 130, 246, 0.1);
            }

            .category-item input[type="checkbox"] {
                margin-right: 0.5rem;
            }

        .price-input-group {
            position: relative;
        }

            .price-input-group .form-control {
                padding-right: 3rem;
            }

        .price-currency {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--admin-secondary);
            font-weight: 500;
        }

        .preview-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
        }

        .preview-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .form-actions {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 12px;
            margin-top: 2rem;
        }

        .validation-summary {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: #dc2626;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .form-help-text {
            font-size: 0.85rem;
            color: var(--admin-secondary);
            margin-top: 0.25rem;
        }

        .status-selector {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .status-option {
            padding: 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .status-option.selected {
                border-color: var(--admin-primary);
                background: rgba(59, 130, 246, 0.1);
            }

            .status-option input[type="radio"] {
                display: none;
            }

        .status-icon {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
    </style>
}

<div class="form-card" data-aos="fade-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Tạo khóa học mới</h4>
            <p class="text-muted mb-0">Điền thông tin chi tiết để tạo khóa học mới</p>
        </div>
        <div>
            <a href="/Admin/Admin/Courses" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
            <button type="button" class="btn btn-admin-info" onclick="previewCourse()">
                <i class="fas fa-eye me-1"></i>Xem trước
            </button>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary" data-aos="fade-in">
            <h6><i class="fas fa-exclamation-triangle me-2"></i>Vui lòng kiểm tra lại thông tin:</h6>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="POST" action="/Admin/Admin/CreateCourse" id="createCourseForm" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- Basic Information -->
        <div class="form-section" data-aos="fade-up" data-aos-delay="100">
            <div class="section-header">
                <div class="section-icon" style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div>
                    <h5 class="section-title">Thông tin cơ bản</h5>
                    <p class="section-description">Thông tin chính về khóa học</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="TenKhoaHoc" class="form-label">
                            Tên khóa học <span class="required-field">*</span>
                        </label>
                        <input type="text" class="form-control" id="TenKhoaHoc" name="TenKhoaHoc"
                               value="@Model?.TenKhoaHoc" placeholder="Nhập tên khóa học..." required>
                        <div class="form-help-text">Tên khóa học nên rõ ràng và hấp dẫn</div>
                    </div>

                    <div class="mb-3">
                        <label for="MoTa" class="form-label">
                            Mô tả khóa học <span class="required-field">*</span>
                        </label>
                        <textarea class="form-control" id="MoTa" name="MoTa" rows="5"
                                  placeholder="Mô tả chi tiết về khóa học, nội dung, mục tiêu học tập..." required>@Model?.MoTa</textarea>
                        <div class="form-help-text">Mô tả chi tiết giúp học viên hiểu rõ hơn về khóa học</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="preview-card">
                        <div class="preview-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h6 id="previewTitle">Tên khóa học sẽ hiển thị ở đây</h6>
                        <p id="previewDescription">Mô tả khóa học...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Instructor and Pricing -->
        <div class="form-section" data-aos="fade-up" data-aos-delay="200">
            <div class="section-header">
                <div class="section-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div>
                    <h5 class="section-title">Giảng viên và Giá</h5>
                    <p class="section-description">Chọn giảng viên và thiết lập giá khóa học</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="UserID" class="form-label">
                            Giảng viên <span class="required-field">*</span>
                        </label>
                        <select class="form-select" id="UserID" name="UserID" required>
                            <option value="">Chọn giảng viên...</option>
                            @if (teachers != null)
                            {
                                @foreach (var teacher in teachers)
                                {
                                    <option value="@teacher.Value" selected="@(teacher.Selected)">@teacher.Text</option>
                                }
                            }
                        </select>
                        <div class="form-help-text">Chọn giảng viên phụ trách khóa học này</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="Gia" class="form-label">
                            Giá khóa học <span class="required-field">*</span>
                        </label>
                        <div class="price-input-group">
                            <input type="number" class="form-control" id="Gia" name="Gia"
                                   value="@Model?.Gia" placeholder="0" min="0" step="1000" required>
                            <span class="price-currency">VNĐ</span>
                        </div>
                        <div class="form-help-text">Nhập 0 nếu khóa học miễn phí</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="form-section" data-aos="fade-up" data-aos-delay="300">
            <div class="section-header">
                <div class="section-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                    <i class="fas fa-tags"></i>
                </div>
                <div>
                    <h5 class="section-title">Danh mục khóa học</h5>
                    <p class="section-description">Chọn danh mục phù hợp cho khóa học</p>
                </div>
            </div>

            <div class="category-grid">
                @if (categories != null)
                {
                    @foreach (var category in categories)
                    {
                        <div class="category-item" onclick="toggleCategory(this, @category.Value)">
                            <input type="checkbox" name="selectedCategories" value="@category.Value" id="cat_@category.Value">
                            <label for="cat_@category.Value" class="mb-0">
                                <i class="fas fa-folder me-2"></i>@category.Text
                            </label>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Chưa có danh mục nào. <a href="/Admin/Admin/CreateCategory">Tạo danh mục mới</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Status -->
        <div class="form-section" data-aos="fade-up" data-aos-delay="400">
            <div class="section-header">
                <div class="section-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <i class="fas fa-toggle-on"></i>
                </div>
                <div>
                    <h5 class="section-title">Trạng thái khóa học</h5>
                    <p class="section-description">Thiết lập trạng thái ban đầu của khóa học</p>
                </div>
            </div>

            <div class="status-selector">
                <div class="status-option selected" onclick="selectStatus(this, 'Active')">
                    <input type="radio" name="TrangThai" value="Active" checked>
                    <div class="status-icon text-success">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <div class="fw-semibold">Hoạt động</div>
                    <small class="text-muted">Khóa học có thể đăng ký ngay</small>
                </div>

                <div class="status-option" onclick="selectStatus(this, 'Pending')">
                    <input type="radio" name="TrangThai" value="Pending">
                    <div class="status-icon text-warning">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="fw-semibold">Chờ duyệt</div>
                    <small class="text-muted">Cần phê duyệt trước khi active</small>
                </div>

                <div class="status-option" onclick="selectStatus(this, 'Draft')">
                    <input type="radio" name="TrangThai" value="Draft">
                    <div class="status-icon text-secondary">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="fw-semibold">Bản nháp</div>
                    <small class="text-muted">Chưa hoàn thành</small>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button type="button" class="btn btn-outline-secondary" onclick="saveDraft()">
                        <i class="fas fa-save me-1"></i>Lưu nháp
                    </button>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                        <i class="fas fa-undo me-1"></i>Đặt lại
                    </button>
                    <button type="submit" class="btn btn-admin-primary">
                        <i class="fas fa-plus me-1"></i>Tạo khóa học
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-eye me-2"></i>Xem trước khóa học
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="course-preview">
                    <div class="preview-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h4 id="modalPreviewTitle">Tên khóa học</h4>
                                <p id="modalPreviewDescription">Mô tả khóa học</p>
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <div>
                                        <i class="fas fa-user me-1"></i>
                                        <span id="modalPreviewTeacher">Giảng viên</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-tags me-1"></i>
                                        <span id="modalPreviewCategories">Danh mục</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="price-display">
                                    <span class="fs-3 fw-bold text-success" id="modalPreviewPrice">0₫</span>
                                </div>
                                <div class="mt-2">
                                    <span class="badge" id="modalPreviewStatus">Trạng thái</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-admin-primary" onclick="submitForm()">
                    <i class="fas fa-plus me-1"></i>Tạo khóa học
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Real-time preview updates
            $('#TenKhoaHoc').on('input', function() {
                const title = $(this).val() || 'Tên khóa học sẽ hiển thị ở đây';
                $('#previewTitle').text(title);
            });

            $('#MoTa').on('input', function() {
                const description = $(this).val() || 'Mô tả khóa học...';
                $('#previewDescription').text(description.substring(0, 100) + (description.length > 100 ? '...' : ''));
            });

            // Form validation
            $('#createCourseForm').on('submit', function(e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }

                showLoading();
            });

            // Auto-save draft every 2 minutes
            setInterval(autoSaveDraft, 120000);
        });

        function toggleCategory(element, categoryId) {
            const checkbox = $(element).find('input[type="checkbox"]');
            const isChecked = checkbox.prop('checked');

            checkbox.prop('checked', !isChecked);
            $(element).toggleClass('selected', !isChecked);
        }

        function selectStatus(element, status) {
            $('.status-option').removeClass('selected');
            $(element).addClass('selected');
            $(element).find('input[type="radio"]').prop('checked', true);
        }

        function validateForm() {
            const title = $('#TenKhoaHoc').val().trim();
            const description = $('#MoTa').val().trim();
            const teacher = $('#UserID').val();
            const price = $('#Gia').val();

            if (!title) {
                showError('Vui lòng nhập tên khóa học!');
                $('#TenKhoaHoc').focus();
                return false;
            }

            if (!description) {
                showError('Vui lòng nhập mô tả khóa học!');
                $('#MoTa').focus();
                return false;
            }

            if (!teacher) {
                showError('Vui lòng chọn giảng viên!');
                $('#UserID').focus();
                return false;
            }

            if (price === '' || price < 0) {
                showError('Vui lòng nhập giá hợp lệ!');
                $('#Gia').focus();
                return false;
            }

            return true;
        }

        function previewCourse() {
            const title = $('#TenKhoaHoc').val() || 'Chưa có tiêu đề';
            const description = $('#MoTa').val() || 'Chưa có mô tả';
            const teacher = $('#UserID option:selected').text();
            const price = $('#Gia').val();
            const status = $('input[name="TrangThai"]:checked').val();

            // Get selected categories
            const categories = [];
            $('input[name="selectedCategories"]:checked').each(function() {
                categories.push($(this).next('label').text().trim());
            });

            $('#modalPreviewTitle').text(title);
            $('#modalPreviewDescription').text(description);
            $('#modalPreviewTeacher').text(teacher || 'Chưa chọn giảng viên');
            $('#modalPreviewCategories').text(categories.length > 0 ? categories.join(', ') : 'Chưa chọn danh mục');
            $('#modalPreviewPrice').text(price ? parseInt(price).toLocaleString() + '₫' : 'Miễn phí');

            // Status badge
            const statusBadge = $('#modalPreviewStatus');
            statusBadge.removeClass('bg-success bg-warning bg-secondary');
            switch(status) {
                case 'Active':
                    statusBadge.addClass('bg-success').text('Hoạt động');
                    break;
                case 'Pending':
                    statusBadge.addClass('bg-warning').text('Chờ duyệt');
                    break;
                case 'Draft':
                    statusBadge.addClass('bg-secondary').text('Bản nháp');
                    break;
            }

            $('#previewModal').modal('show');
        }

        function submitForm() {
            $('#previewModal').modal('hide');
            if (validateForm()) {
                $('#createCourseForm').submit();
            }
        }

        function resetForm() {
            Swal.fire({
                title: 'Đặt lại form?',
                text: 'Tất cả thông tin đã nhập sẽ bị xóa.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Đặt lại',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('createCourseForm').reset();
                    $('.category-item').removeClass('selected');
                    $('.status-option').removeClass('selected');
                    $('.status-option').first().addClass('selected');
                    $('.status-option').first().find('input').prop('checked', true);
                    $('#previewTitle').text('Tên khóa học sẽ hiển thị ở đây');
                    $('#previewDescription').text('Mô tả khóa học...');
                    showSuccess('Đã đặt lại form!');
                }
            });
        }

        function saveDraft() {
            if (!$('#TenKhoaHoc').val().trim()) {
                showWarning('Vui lòng nhập ít nhất tên khóa học để lưu nháp!');
                return;
            }

            // Set status to Draft
            $('.status-option').removeClass('selected');
            $('.status-option[onclick*="Draft"]').addClass('selected');
            $('input[name="TrangThai"][value="Draft"]').prop('checked', true);

            showLoading();
            $('#createCourseForm').submit();
        }

        function autoSaveDraft() {
            if ($('#TenKhoaHoc').val().trim()) {
                // Auto-save logic here
                console.log('Auto-saving draft...');
            }
        }

        // Price formatting
        $('#Gia').on('input', function() {
            let value = $(this).val();
            if (value) {
                // Format number with thousands separator for preview
                const formatted = parseInt(value).toLocaleString();
                $('#previewPrice').text(formatted + '₫');
            } else {
                $('#previewPrice').text('Miễn phí');
            }
        });
    </script>
}