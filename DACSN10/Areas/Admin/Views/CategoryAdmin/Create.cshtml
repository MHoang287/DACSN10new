@model DACSN10.Areas.Admin.Models.CategoryAdminViewModel
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4">Thêm danh mục mới</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Danh mục</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus-circle me-1"></i>
            Thông tin danh mục mới
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="createForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Tên danh mục</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" required data-intro="Nhập tên danh mục tại đây" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" rows="4" data-intro="Mô tả chi tiết về danh mục"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Trở về danh sách
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Form validation sử dụng jQuery Validation
            $("#createForm").validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    },
                    Description: {
                        maxlength: 500
                    }
                },
                messages: {
                    Name: {
                        required: "Vui lòng nhập tên danh mục",
                        minlength: "Tên danh mục phải có ít nhất 2 ký tự",
                        maxlength: "Tên danh mục không được vượt quá 100 ký tự"
                    },
                    Description: {
                        maxlength: "Mô tả không được vượt quá 500 ký tự"
                    }
                },
                errorElement: "div",
                errorClass: "invalid-feedback",
                highlight: function (element) {
                    $(element).addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element) {
                    $(element).addClass("is-valid").removeClass("is-invalid");
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                },
                submitHandler: function(form) {
                    Swal.fire({
                        title: 'Xác nhận',
                        text: "Bạn có chắc chắn muốn thêm danh mục này?",
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Đồng ý',
                        cancelButtonText: 'Hủy bỏ'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                    return false;
                }
            });

            // Material Design input effects
            $('.form-control').each(function() {
                if ($(this).val()) {
                    $(this).addClass('active');
                }
            }).on('focusin', function() {
                $(this).addClass('active');
            }).on('focusout', function() {
                if (!$(this).val()) {
                    $(this).removeClass('active');
                }
            });

            // Hướng dẫn người dùng với Intro.js
            $('#showTutorial').click(function() {
                introJs().setOptions({
                    steps: [
                        {
                            element: $('[asp-for="Name"]')[0],
                            intro: 'Nhập tên danh mục tại đây. Tên danh mục phải có ít nhất 2 ký tự.',
                            position: 'bottom'
                        },
                        {
                            element: $('[asp-for="Description"]')[0],
                            intro: 'Nhập mô tả chi tiết về danh mục (không bắt buộc).',
                            position: 'bottom'
                        },
                        {
                            element: $('button[type="submit"]')[0],
                            intro: 'Nhấn nút này để lưu danh mục mới.',
                            position: 'bottom'
                        }
                    ],
                    prevLabel: 'Trước',
                    nextLabel: 'Tiếp',
                    skipLabel: 'Bỏ qua',
                    doneLabel: 'Xong'
                }).start();
            });
        });
    </script>
}