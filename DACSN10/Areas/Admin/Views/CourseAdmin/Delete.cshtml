@model DACSN10.Models.Course
@{
    ViewData["Title"] = "Xóa khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4">Xóa khóa học</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Khóa học</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Xác nhận xóa khóa học
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa khóa học này? Hành động này không thể hoàn tác và sẽ xóa tất cả dữ liệu liên quan đến khóa học này.
            </div>

            <div class="mb-4">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">ID khóa học:</div>
                    <div class="col-md-9">@Model.CourseID</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Tên khóa học:</div>
                    <div class="col-md-9">@Model.TenKhoaHoc</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Giảng viên:</div>
                    <div class="col-md-9">@Model.User.HoTen</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Giá:</div>
                    <div class="col-md-9">@Model.Gia.ToString("N0") VNĐ</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Trạng thái:</div>
                    <div class="col-md-9">
                        @if (Model.TrangThai == "Đang hoạt động")
                        {
                            <span class="badge bg-success">@Model.TrangThai</span>
                        }
                        else if (Model.TrangThai == "Chờ duyệt")
                        {
                            <span class="badge bg-warning text-dark">@Model.TrangThai</span>
                        }
                        else if (Model.TrangThai == "Bị từ chối")
                        {
                            <span class="badge bg-danger">@Model.TrangThai</span>
                        }
                        else if (Model.TrangThai == "Tạm ngưng")
                        {
                            <span class="badge bg-secondary">@Model.TrangThai</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@Model.TrangThai</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Ngày tạo:</div>
                    <div class="col-md-9">@Model.NgayTao.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Danh mục:</div>
                    <div class="col-md-9">
                        @foreach (var category in Model.CourseCategories.Select(cc => cc.Category))
                        {
                            <span class="badge bg-info me-1">@category.Name</span>
                        }
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" id="deleteForm">
                <input type="hidden" name="id" value="@Model.CourseID" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Trở về danh sách
                    </a>
                    <button type="button" id="deleteButton" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xác nhận xóa với SweetAlert2
            $('#deleteButton').click(function () {
                Swal.fire({
                    title: 'Bạn có chắc chắn muốn xóa?',
                    text: "Khóa học \"@Model.TenKhoaHoc\" sẽ bị xóa vĩnh viễn!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Có, xóa ngay!',
                    cancelButtonText: 'Hủy bỏ'
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('deleteForm').submit();
                    }
                });
            });

            // Hiệu ứng Animate.css
            $(".card").addClass("animate__animated animate__fadeIn");
        });
    </script>
}