@model DACSN10.Models.Course
@{
    ViewData["Title"] = "Chi tiết khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var enrollmentCount = (int)ViewBag.EnrollmentCount;
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4">Chi tiết khóa học</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Khóa học</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>

    <!-- Thông tin cơ bản -->
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Thông tin khóa học
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h3>@Model.TenKhoaHoc</h3>
                        <div class="d-flex align-items-center mb-3">
                            <span class="me-3">
                                @if (Model.TrangThai == "Đang hoạt động")
                                {
                                    <span class="badge bg-success">@Model.TrangThai</span>
                                }
                                else if (Model.TrangThai == "Chờ duyệt")
                                {
                                    <span class="badge bg-warning text-dark">@Model.TrangThai</span>
                                }
                                else if (Model.TrangThai == "Bị từ chối")
                                {
                                    <span class="badge bg-danger">@Model.TrangThai</span>
                                }
                                else if (Model.TrangThai == "Tạm ngưng")
                                {
                                    <span class="badge bg-secondary">@Model.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@Model.TrangThai</span>
                                }
                            </span>
                            <span class="me-3"><i class="fas fa-calendar-alt me-1"></i> @Model.NgayTao.ToString("dd/MM/yyyy")</span>
                            <span><i class="fas fa-chalkboard-teacher me-1"></i> @Model.User.HoTen</span>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <h5>Mô tả</h5>
                            <div class="course-description">
                                @Html.Raw(Model.MoTa)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Giá</h5>
                                <h4 class="text-primary">@Model.Gia.ToString("N0") VNĐ</h4>
                            </div>
                            <div class="col-md-6">
                                <h5>Danh mục</h5>
                                <div>
                                    @foreach (var category in Model.CourseCategories.Select(cc => cc.Category))
                                    {
                                        <span class="badge bg-info me-1 mb-1">@category.Name</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Trở về danh sách
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-primary me-2">
                                <i class="fas fa-edit me-1"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.CourseID" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bài học & Nội dung khóa học -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-book me-1"></i>
                    Nội dung khóa học
                </div>
                <div class="card-body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#lessons">
                                <i class="fas fa-play-circle me-1"></i> Bài học (@(Model.Lessons?.Count ?? 0))
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#assignments">
                                <i class="fas fa-clipboard-list me-1"></i> Bài tập (@(Model.Assignments?.Count ?? 0))
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#quizzes">
                                <i class="fas fa-question-circle me-1"></i> Bài kiểm tra (@(Model.Quizzes?.Count ?? 0))
                            </a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content mt-3">
                        <div id="lessons" class="tab-pane fade show active">
                            @if (Model.Lessons != null && Model.Lessons.Any())
                            {
                                <div class="list-group">
                                    @foreach (var lesson in Model.Lessons)
                                    {
                                        <div class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">@lesson.TenBaiHoc</h5>
                                                <small>@lesson.ThoiLuong phút</small>
                                            </div>
                                            <p class="mb-1">@(string.IsNullOrEmpty(lesson.NoiDung) ? "Không có mô tả" : lesson.NoiDung.Length > 100 ? lesson.NoiDung.Substring(0, 100) + "..." : lesson.NoiDung)</p>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Khóa học này chưa có bài học nào.
                                </div>
                            }
                        </div>
                        <div id="assignments" class="tab-pane fade">
                            @if (Model.Assignments != null && Model.Assignments.Any())
                            {
                                <div class="list-group">
                                    @foreach (var assignment in Model.Assignments)
                                    {
                                        <div class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">@assignment.TenBaiTap</h5>
                                                <small>Hạn nộp: @assignment.HanNop.ToString("dd/MM/yyyy")</small>
                                            </div>
                                            <p class="mb-1">@assignment.MoTa</p>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Khóa học này chưa có bài tập nào.
                                </div>
                            }
                        </div>
                        <div id="quizzes" class="tab-pane fade">
                            @if (Model.Quizzes != null && Model.Quizzes.Any())
                            {
                                <div class="list-group">
                                    @foreach (var quiz in Model.Quizzes)
                                    {
                                        <div class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">@quiz.Title</h5>
                                            </div>
                                            <small>Số câu hỏi: @(quiz.Questions?.Count() ?? 0)</small>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Khóa học này chưa có bài kiểm tra nào.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <!-- Thống kê -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Thống kê khóa học
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>Học viên đã đăng ký</div>
                            <div class="h5 mb-0">@enrollmentCount</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @Math.Min(enrollmentCount, 100)%;" aria-valuenow="@enrollmentCount" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>Bài học</div>
                            <div class="h5 mb-0">@(Model.Lessons?.Count ?? 0)</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Math.Min((Model.Lessons?.Count ?? 0) * 10, 100)%;" aria-valuenow="@(Model.Lessons?.Count ?? 0)" aria-valuemin="0" aria-valuemax="10"></div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>Bài tập</div>
                            <div class="h5 mb-0">@(Model.Assignments?.Count ?? 0)</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @Math.Min((Model.Assignments?.Count ?? 0) * 20, 100)%;" aria-valuenow="@(Model.Assignments?.Count ?? 0)" aria-valuemin="0" aria-valuemax="5"></div>
                        </div>
                    </div>

                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>Bài kiểm tra</div>
                            <div class="h5 mb-0">@(Model.Quizzes?.Count ?? 0)</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @Math.Min((Model.Quizzes?.Count ?? 0) * 33, 100)%;" aria-valuenow="@(Model.Quizzes?.Count ?? 0)" aria-valuemin="0" aria-valuemax="3"></div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <canvas id="courseContentChart" width="100%" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Thông tin giảng viên -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-tie me-1"></i>
                    Thông tin giảng viên
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="https://via.placeholder.com/150" class="rounded-circle" alt="Avatar" />
                        <h5 class="mt-2">@Model.User.HoTen</h5>
                        <p>@Model.User.Email</p>
                    </div>
                    <hr />
                    <div class="mb-2">
                        <strong><i class="fas fa-graduation-cap me-1"></i> Khóa học:</strong>
                        @(Model.User.Courses?.Count ?? 0)
                    </div>
                    <div class="mb-2">
                        <strong><i class="fas fa-phone me-1"></i> Liên hệ:</strong>
                        @Model.User.PhoneNumber
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Hiển thị thông báo thành công nếu có
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    toastr.success('@TempData["SuccessMessage"]', 'Thành công');
            </text>
        }

            // Hiển thị thông báo lỗi nếu có
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    toastr.error('@TempData["ErrorMessage"]', 'Lỗi');
            </text>
        }

            // Biểu đồ phân bố nội dung
            var ctxContent = document.getElementById("courseContentChart");
            var courseContentChart = new Chart(ctxContent, {
                type: 'doughnut',
                data: {
                    labels: ["Bài học", "Bài tập", "Bài kiểm tra"],
                    datasets: [{
                        data: [
        @(Model.Lessons?.Count ?? 0),
        @(Model.Assignments?.Count ?? 0),
        @(Model.Quizzes?.Count ?? 0)
                        ],
                        backgroundColor: ['#1cc88a', '#36b9cc', '#f6c23e'],
                        hoverBackgroundColor: ['#17a673', '#2c9faf', '#f4b619'],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    tooltips: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyFontColor: "#858796",
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: false,
                        caretPadding: 10,
                    },
                    legend: {
                        display: true,
                        position: 'bottom'
                    },
                    cutoutPercentage: 70,
                }
            });

            // Hiệu ứng Animate.css khi chuyển tab
            $('.nav-tabs a').on('shown.bs.tab', function (e) {
                $(e.target.getAttribute('href')).addClass('animate__animated animate__fadeIn');
            });
        });
    </script>
}