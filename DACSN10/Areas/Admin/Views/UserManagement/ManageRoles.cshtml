@model DACSN10.Areas.Admin.Models.ManageRolesViewModel

@{
    ViewData["Title"] = "Quản lý vai trò";
    Layout = "_Layout";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="ManageRoles" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label>Vai trò hiện tại</label>
            <input asp-for="CurrentRole" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label>Chọn vai trò mới</label>
            <select asp-for="SelectedRole" class="form-control">
                @foreach (var role in (List<string>)ViewBag.AllRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>