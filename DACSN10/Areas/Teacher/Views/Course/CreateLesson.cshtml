@model DACSN10.Areas.Teacher.Models.LessonViewModel

@{
    ViewData["Title"] = "Create Lesson";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4 mb-4">
        <i class="fas fa-plus-circle"></i> Create New Lesson
    </h1>
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-book-open me-1"></i> Lesson Details</div>
                <div class="card-body">
                    <form asp-action="CreateLesson" method="post" enctype="multipart/form-data" id="createLessonForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="CourseID" />
                        <div class="mb-3">
                            <label asp-for="TenBaiHoc" class="form-label"></label>
                            <input asp-for="TenBaiHoc" class="form-control" required />
                            <span asp-validation-for="TenBaiHoc" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThoiLuong" class="form-label"></label>
                            <input asp-for="ThoiLuong" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="ThoiLuong" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label"></label>
                            <input asp-for="VideoUrl" class="form-control" />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="IsVideoRequiredComplete" class="form-check-input" type="checkbox" id="IsVideoRequiredComplete" />
                            <label asp-for="IsVideoRequiredComplete" class="form-check-label">Bắt buộc học viên xem hết video để hoàn thành</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content Option</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="contentOption" id="contentTextOption" value="text" checked>
                                <label class="form-check-label" for="contentTextOption">Text Content</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="contentOption" id="contentFileOption" value="file">
                                <label class="form-check-label" for="contentFileOption">Upload Document</label>
                            </div>
                        </div>
                        <div class="mb-3" id="textContentSection">
                            <label asp-for="NoiDung" class="form-label"></label>
                            <textarea asp-for="NoiDung" id="lessonContent" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>
                        <div class="mb-3" id="fileUploadSection" style="display: none;">
                            <label asp-for="DocumentFile" class="form-label"></label>
                            <input asp-for="DocumentFile" class="form-control" accept=".pdf,.doc,.docx,.ppt,.pptx" />
                            <span asp-validation-for="DocumentFile" class="text-danger"></span>
                        </div>
                        <div class="mt-4 text-end">
                            <a asp-action="Lessons" asp-route-id="@Model.CourseID" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Back to Lessons
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Lesson
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('input[name="contentOption"]').on('change', function() {
                const selectedOption = $('input[name="contentOption"]:checked').val();
                if (selectedOption === 'text') {
                    $('#textContentSection').show();
                    $('#fileUploadSection').hide();
                } else {
                    $('#textContentSection').hide();
                    $('#fileUploadSection').show();
                }
            });
        });
    </script>
}