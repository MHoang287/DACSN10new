@model DACSN10.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4 mb-4 text-danger">
        <i class="fas fa-trash"></i> Delete Course
    </h1>

    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning!</strong> This action cannot be undone. All lessons, quizzes, and student enrollments related to this course will be permanently deleted.
    </div>

    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-info-circle me-1"></i>
            Course Details
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Course Name:</dt>
                        <dd class="col-sm-8">@Model.TenKhoaHoc</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == "Published")
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else if (Model.TrangThai == "Draft")
                            {
                                <span class="badge bg-warning text-dark">Draft</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.TrangThai</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">@Model.Gia.ToString("N0") VND</dd>

                        <dt class="col-sm-4">Created On:</dt>
                        <dd class="col-sm-8">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <div class="card mb-3 bg-light">
                        <div class="card-header">Description</div>
                        <div class="card-body">
                            <p class="card-text">@(string.IsNullOrEmpty(Model.MoTa) ? "No description provided." : Model.MoTa)</p>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" id="deleteCourseForm">
                <input type="hidden" asp-for="CourseID" />

                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="button" id="confirmDeleteBtn" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confirm delete with SweetAlert
            $("#confirmDeleteBtn").on("click", function() {
                Swal.fire({
                    title: 'Final Confirmation',
                    text: "Are you absolutely sure you want to delete this course? This action cannot be undone.",
                    icon: 'warning',
                    input: 'text',
                    inputPlaceholder: 'Type "DELETE" to confirm',
                    inputValidator: (value) => {
                        if (value !== 'DELETE') {
                            return 'You need to type "DELETE" to proceed!'
                        }
                    },
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    confirmButtonColor: '#dc3545',
                    cancelButtonText: 'No, cancel',
                    backdrop: `rgba(220, 53, 69, 0.2)`
                }).then((result) => {
                    if (result.isConfirmed) {
                        $("#deleteCourseForm").submit();
                    }
                });
            });
        });
    </script>
}