@model IEnumerable<DACSN10.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4 mb-4">
        <i class="fas fa-book"></i> My Courses
    </h1>

    <div class="card mb-4">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <i class="fas fa-table me-1"></i>
                    Course Management
                </div>
                <div class="col text-end">
                    <a asp-action="Create" class="btn btn-primary" data-intro="Click here to create a new course">
                        <i class="fas fa-plus-circle"></i> Create New Course
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="coursesTable" class="table table-striped table-hover" width="100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th>Creation Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenKhoaHoc</td>
                            <td>
                                @if (item.TrangThai == "Published")
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else if (item.TrangThai == "Draft")
                                {
                                    <span class="badge bg-warning text-dark">Draft</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.TrangThai</span>
                                }
                            </td>
                            <td>@item.Gia.ToString("N0") VND</td>
                            <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-sm btn-primary" title="Edit Course">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Lessons" asp-route-id="@item.CourseID" class="btn btn-sm btn-info" title="Manage Lessons">
                                        <i class="fas fa-list-ul"></i>
                                    </a>
                                    <a asp-action="Quizzes" asp-route-id="@item.CourseID" class="btn btn-sm btn-success" title="Manage Quizzes">
                                        <i class="fas fa-question-circle"></i>
                                    </a>
                                    <a asp-action="Students" asp-route-id="@item.CourseID" class="btn btn-sm btn-secondary" title="View Students">
                                        <i class="fas fa-users"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-sm btn-danger delete-course" title="Delete Course"
                                       data-course-id="@item.CourseID" data-course-title="@item.TenKhoaHoc">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chart-bar me-1"></i>
            Course Statistics
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <canvas id="courseStatusChart"></canvas>
                </div>
                <div class="col-md-6">
                    <a asp-action="EnrollmentStats" class="btn btn-outline-primary">
                        <i class="fas fa-chart-line"></i> View Detailed Enrollment Statistics
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#coursesTable').DataTable({
                responsive: true
            });

            // Initialize intro.js
            const startTour = () => {
                introJs().setOptions({
                    steps: [
                        {
                            element: document.querySelector('h1'),
                            intro: "Welcome to your course management dashboard!"
                        },
                        {
                            element: document.querySelector('.btn-primary'),
                            intro: "Click here to create a new course"
                        },
                        {
                            element: document.querySelector('#coursesTable'),
                            intro: "Here you can view and manage all your courses"
                        }
                    ]
                }).start();
            };

            // Add a tour button
            $('<button class="btn btn-sm btn-info position-fixed" style="bottom: 20px; right: 20px;"><i class="fas fa-question-circle"></i> Help</button>')
                .appendTo('body')
                .on('click', startTour);

            // Create chart
            const ctx = document.getElementById('courseStatusChart').getContext('2d');

            // Count courses by status
            let published = 0;
            let draft = 0;
            let other = 0;

        @foreach (var item in Model)
        {
            @:if ("@item.TrangThai" === "Published") published++;
            @:else if ("@item.TrangThai" === "Draft") draft++;
            @:else other++;
        }

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Published', 'Draft', 'Other'],
                    datasets: [{
                        data: [published, draft, other],
                        backgroundColor: ['#28a745', '#ffc107', '#6c757d']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Course Status Distribution'
                        }
                    }
                }
            });

            // SweetAlert for delete confirmation
            $('.delete-course').on('click', function (e) {
                e.preventDefault();
                const courseId = $(this).data('course-id');
                const courseTitle = $(this).data('course-title');

                Swal.fire({
                    title: 'Are you sure?',
                    text: `Do you want to delete the course "${courseTitle}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/Teacher/Course/Delete/${courseId}`;
                    }
                });
            });
        });
    </script>
}