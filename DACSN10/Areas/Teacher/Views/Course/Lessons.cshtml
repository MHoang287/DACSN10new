@model DACSN10.Models.Course

@{
    ViewData["Title"] = "Course Lessons";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="container-fluid px-4 animate__animated animate__fadeIn">
    <h1 class="mt-4 mb-4">
        <i class="fas fa-list-ul"></i> Lessons for "@Model.TenKhoaHoc"
    </h1>
    <a asp-action="CreateLesson" asp-route-id="@Model.CourseID" class="btn btn-primary mb-3">
        <i class="fas fa-plus-circle"></i> Add New Lesson
    </a>
    @if (Model.Lessons == null || !Model.Lessons.Any())
    {
        <div class="alert alert-info">No lessons have been added to this course yet.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var lesson in Model.Lessons.OrderBy(l => l.LessonID))
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-action="LessonDetail" asp-route-id="@lesson.LessonID" class="fw-bold text-decoration-none flex-grow-1">
                        @lesson.TenBaiHoc
                        <span class="ms-2 text-muted">(@lesson.ThoiLuong phút)</span>
                    </a>
                    <div class="ms-3 btn-group">
                        <a asp-action="EditLesson" asp-route-lessonId="@lesson.LessonID" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button class="btn btn-sm btn-outline-danger btn-delete-lesson" data-id="@lesson.LessonID" data-title="@lesson.TenBaiHoc" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                        <a asp-action="LessonDetail" asp-route-id="@lesson.LessonID" class="btn btn-sm btn-outline-secondary ms-1" title="View">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            $('.btn-delete-lesson').on('click', function() {
                const lessonId = $(this).data('id');
                const lessonTitle = $(this).data('title');
                Swal.fire({
                    title: 'Xóa bài học',
                    text: `Bạn có chắc chắn muốn xóa "${lessonTitle}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy',
                    confirmButtonColor: '#d33'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect để thực hiện xóa (action: DeleteLesson)
                        window.location.href = '/Teacher/Course/DeleteLesson/' + lessonId;
                    }
                });
            });
        });
    </script>
}