@{
    ViewData["Title"] = "Không tìm thấy đăng ký";
}

<div class="container animate__animated animate__fadeIn">
    <div class="text-center py-5">
        <img src="/images/not-enrolled.svg" alt="Không tìm thấy đăng ký" style="max-width: 250px;" class="mb-4">
        <h2 class="mb-3">Không tìm thấy đăng ký khóa học</h2>
        <p class="text-muted mb-4">
            Bạn chưa đăng ký khóa học này hoặc đăng ký đã bị hủy.
            <br>Vui lòng đăng ký khóa học để truy cập nội dung bài học.
        </p>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Lý do có thể xảy ra:</h5>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <i class="fas fa-times-circle text-danger me-2"></i> Bạn chưa đăng ký khóa học này
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-times-circle text-danger me-2"></i> Đăng ký của bạn đã bị hủy
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-times-circle text-danger me-2"></i> Khóa học không còn tồn tại hoặc đã bị gỡ bỏ
                            </li>
                        </ul>

                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "Course")" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Tìm khóa học khác
                            </a>
                            <a href="@Url.Action("MyCourses", "Course")" class="btn btn-outline-primary">
                                <i class="fas fa-book me-1"></i> Khóa học của tôi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Khóa học đề xuất -->
        <h4 class="mb-3">Có thể bạn quan tâm</h4>
        <div class="row row-cols-1 row-cols-md-4 g-4" id="suggestedCourses">
            <div class="col-12 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
                <p class="mt-2">Đang tải khóa học đề xuất...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
                        // Lấy khóa học đề xuất
            $.ajax({
                url: '@Url.Action("PopularCourses", "Course")',
                type: 'GET',
                dataType: 'json',
                success: function(data) {
                    var coursesHtml = '';

                    if (data && data.length > 0) {
                        coursesHtml = '';
                        var courses = data.slice(0, 4);

                        courses.forEach(function(course) {
                            coursesHtml += `
                                <div class="col animate__animated animate__fadeIn">
                                    <div class="card h-100 shadow-sm">
                                        <img src="${course.HinhAnh || '/images/default-course.jpg'}" class="card-img-top" alt="${course.TenKhoaHoc}" style="height: 140px; object-fit: cover;">
                                        <div class="card-body">
                                            <h5 class="card-title">${course.TenKhoaHoc}</h5>
                                            <p class="card-text small text-muted mb-2">
                                                <i class="fas fa-user me-1"></i> ${course.User?.HoTen || 'Không có thông tin'}
                                            </p>
                                            <div class="d-grid">
                                                <a href="/Course/Details/${course.CourseID}" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-info-circle me-1"></i> Xem chi tiết
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                    } else {
                        coursesHtml = '<div class="col-12"><div class="alert alert-info">Không có khóa học nào để đề xuất.</div></div>';
                    }

                    $('#suggestedCourses').html(coursesHtml);
                },
                error: function() {
                    $('#suggestedCourses').html('<div class="col-12"><div class="alert alert-warning">Không thể tải khóa học đề xuất.</div></div>');
                }
            });

            // Hiệu ứng thông báo
            setTimeout(function() {
                toastr.warning('Bạn chưa đăng ký khóa học này', 'Thông báo');
            }, 1000);
        });
    </script>
}