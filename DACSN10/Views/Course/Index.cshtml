@model List<DACSN10.Models.Course>
@{
    ViewData["Title"] = "Khóa học";
    var page = ViewBag.Page;
    var pageSize = ViewBag.PageSize;
    var totalCourses = ViewBag.TotalCourses;
    var totalPages = (int)Math.Ceiling((double)totalCourses / pageSize);
}
<h2>Khóa học</h2>
<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card course-card">
                <div class="card-body">
                    <h5 class="card-title">@course.TenKhoaHoc</h5>
                    <p class="card-text">@course.MoTa</p>
                    <p class="card-text"><strong>Price:</strong> @course.Gia.ToString("C")</p>
                    <a href="@Url.Action("Details", new { id = course.CourseID })" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
<nav>
    <ul class="pagination">
        <li class="page-item @(page == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { page = page - 1 })">Trước</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == page ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
        <li class="page-item @(page == totalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { page = page + 1 })">Tiếp theo</a>
        </li>
    </ul>
</nav>