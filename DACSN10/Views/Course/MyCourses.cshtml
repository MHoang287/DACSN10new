@model List<DACSN10.Models.Course>
@{
    ViewData["Title"] = "Khóa học của tôi";
}
<h2>Khóa học của tôi</h2>
@if (!Model.Any())
{
    <p>Bạn chưa đăng ký bất kỳ khóa học nào.</p>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card course-card">
                    <div class="card-body">
                        <h5 class="card-title">@course.TenKhoaHoc</h5>
                        <p class="card-text">@course.MoTa</p>
                        <a href="@Url.Action("Progress", new { courseId = course.CourseID })" class="btn btn-info">Xem tiến độ</a>
                        <a href="@Url.Action("Details", new { id = course.CourseID })" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}