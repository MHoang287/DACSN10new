@model List<DACSN10.Models.Course>
@{
    ViewData["Title"] = "Khóa học mới";
}

<div class="container animate__animated animate__fadeIn">
    <h1 class="mb-4 text-center fw-bold">
        <i class="fas fa-star text-warning me-2"></i> Khóa học mới nhất
    </h1>
    <p class="text-center text-muted mb-5">
        Khám phá những khóa học mới nhất trên hệ thống
    </p>

    <div class="row">
        <div class="col-md-8">
            @if (Model != null && Model.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4 mb-4" id="newCoursesContainer">
                    @foreach (var course in Model)
                    {
                        <div class="col course-item">
                            <div class="card h-100 shadow-sm course-card">
                                <div class="position-relative">
                                    <div class="position-absolute top-0 start-0 m-2">
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star me-1"></i> Mới
                                        </span>
                                    </div>
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-calendar-alt me-1"></i> @((DateTime.Now - course.NgayTao).Days) ngày trước
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@course.TenKhoaHoc</h5>
                                    <p class="card-text text-muted small">
                                        <i class="fas fa-user me-1"></i> @(course.User?.HoTen ?? "Không có thông tin")
                                    </p>
                                    <p class="card-text" style="height: 50px; overflow: hidden;">
                                        @(course.MoTa?.Length > 100 ? course.MoTa.Substring(0, 100) + "..." : course.MoTa)
                                    </p>
                                    <div class="mt-auto d-flex justify-content-between">
                                        <a href="@Url.Action("Details", new { id = course.CourseID })" class="btn btn-primary">
                                            <i class="fas fa-info-circle me-1"></i> Chi tiết
                                        </a>
                                        <div>
                                            <a href="javascript:void(0);" class="btn btn-outline-primary btn-follow" data-id="@course.CourseID" title="Theo dõi">
                                                <i class="far fa-bell"></i>
                                            </a>
                                            <a href="javascript:void(0);" class="btn btn-outline-danger btn-favorite" data-id="@course.CourseID" title="Yêu thích">
                                                <i class="far fa-heart"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("PopularCourses", "Course")" class="btn btn-outline-primary">
                        <i class="fas fa-fire me-1"></i> Xem khóa học phổ biến
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i> Chưa có khóa học mới. Hãy quay lại sau!
                </div>
            }
        </div>

        <div class="col-md-4">
            <!-- Timeline các khóa học mới -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i> Timeline</h5>
                </div>
                <div class="card-body p-0">
                    <div class="timeline-container">
                        @if (Model != null && Model.Any())
                        {
                            <ol class="timeline">
                                @foreach (var course in Model.Take(7))
                                {
                                    <li class="timeline-item">
                                        <div class="timeline-info">
                                            <span>@course.NgayTao.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="timeline-marker"></div>
                                        <div class="timeline-content">
                                            <h5 class="timeline-title">
                                                <a href="@Url.Action("Details", new { id = course.CourseID })">@course.TenKhoaHoc</a>
                                            </h5>
                                            <p class="text-muted small">
                                                <i class="fas fa-user me-1"></i> @(course.User?.HoTen ?? "Không có thông tin")
                                            </p>
                                        </div>
                                    </li>
                                }
                            </ol>
                        }
                        else
                        {
                            <div class="p-3">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Chưa có khóa học mới.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Giới thiệu -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Thông tin</h5>
                </div>
                <div class="card-body">
                    <p>
                        <i class="fas fa-star me-2 text-warning"></i>
                        <span class="fw-bold">@(Model?.Count ?? 0)</span> khóa học mới trong tháng này
                    </p>
                    <p>
                        <i class="fas fa-users me-2 text-primary"></i>
                        <span id="totalUsers" class="fw-bold">0</span> học viên đã đăng ký
                    </p>
                    <p>
                        <i class="fas fa-list-alt me-2 text-success"></i>
                        <span id="totalCategories" class="fw-bold">0</span> danh mục nội dung
                    </p>

                    <hr>

                    <p class="mb-0 text-muted small">
                        <i class="fas fa-bell me-1"></i> Đăng ký nhận thông báo về các khóa học mới
                    </p>
                    <div class="input-group mt-2">
                        <input type="email" class="form-control" placeholder="Email của bạn...">
                        <button class="btn btn-primary" type="button" id="subscribeBtn">Đăng ký</button>
                    </div>
                </div>
            </div>

            <!-- Tags / Chủ đề -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i> Chủ đề phổ biến</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2" id="popularTags">
                        <div class="placeholder-glow w-100">
                            <span class="placeholder col-4"></span>
                            <span class="placeholder col-3"></span>
                            <span class="placeholder col-5"></span>
                            <span class="placeholder col-6"></span>
                            <span class="placeholder col-3"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Timeline styling */
    .timeline {
        border-left: 3px solid #007bff;
        border-bottom-right-radius: 4px;
        border-top-right-radius: 4px;
        margin: 0 auto;
        position: relative;
        padding: 0;
        list-style: none;
        text-align: left;
        max-width: 40rem;
    }

    .timeline-item {
        position: relative;
        margin-left: 20px;
        padding: 1rem 0;
    }

    .timeline-info {
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 1px;
        margin: 0 0 0.5em 0;
        text-transform: uppercase;
        white-space: nowrap;
    }

    .timeline-marker {
        position: absolute;
        top: 1.1rem;
        left: -31px;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: 3px solid #007bff;
        background: white;
    }

    .timeline-content {
        padding-bottom: 0.5rem;
        border-bottom: 1px dashed #e9ecef;
    }

    .timeline-title {
        font-size: 1rem;
        margin: 0 0 0.5rem;
    }

    .timeline-container {
        max-height: 400px;
        overflow-y: auto;
        padding: 1rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Nạp số liệu thống kê
            $('#totalUsers').text(Math.floor(Math.random() * 5000) + 1000);
            $('#totalCategories').text(Math.floor(Math.random() * 20) + 5);

            // Nạp tags phổ biến
            var popularTags = [
                'Web Development', 'Programming', 'Data Science', 'Machine Learning', 'UI/UX Design',
                'Mobile App', 'JavaScript', 'Python', 'Java', 'HTML/CSS', 'React', 'Angular',
                'Database', 'AI', 'Game Development', 'DevOps', 'Cloud Computing'
            ];

            var tagsHtml = '';
            popularTags.forEach(function(tag) {
                var size = Math.floor(Math.random() * 3) + 1; // 1, 2, or 3
                var colorClass = '';

                switch(size) {
                    case 1:
                        colorClass = 'bg-light text-dark';
                        break;
                    case 2:
                        colorClass = 'bg-primary text-white';
                        break;
                    case 3:
                        colorClass = 'bg-warning text-dark';
                        break;
                }

                tagsHtml += '<a href="@Url.Action("SearchByTopic")?topic=' + tag + '" class="badge ' + colorClass + ' py-2 px-3 text-decoration-none">' + tag + '</a>';
            });

            $('#popularTags').html(tagsHtml);

            // Xử lý nút đăng ký nhận thông báo
            $('#subscribeBtn').on('click', function() {
                var email = $(this).prev('input').val();
                if (!email || !email.includes('@@')){
                    toastr.error('Vui lòng nhập email hợp lệ!');
                    return;
                }

                toastr.success('Đã đăng ký nhận thông báo thành công!');
                $(this).prev('input').val('');
            });

            // Xử lý nút theo dõi và yêu thích
            $('.btn-follow, .btn-favorite').on('click', function() {
                var btn = $(this);
                var isFollow = btn.hasClass('btn-follow');
                var courseId = btn.data('id');

        @if (User.Identity.IsAuthenticated)
        {
            <text>
                        var actionUrl = isFollow ? '@Url.Action("FollowCourse")' : '@Url.Action("AddToFavorite")';
                        var successMsg = isFollow ? 'Đã theo dõi khóa học thành công!' : 'Đã thêm vào danh sách yêu thích!';

                        $.ajax({
                            url: actionUrl,
                            type: 'POST',
                            data: {
                                courseId: courseId,
                                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function(result) {
                                btn.find('i').removeClass('far').addClass('fas');
                                toastr.success(successMsg);
                            },
                            error: function(xhr) {
                                if (xhr.status === 401) {
                                    Swal.fire({
                                        title: 'Cần đăng nhập',
                                        text: 'Bạn cần đăng nhập để thực hiện chức năng này.',
                                        icon: 'info',
                                        showCancelButton: true,
                                        confirmButtonText: 'Đăng nhập',
                                        cancelButtonText: 'Hủy'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = '/Identity/Account/Login';
                                        }
                                    });
                                } else {
                                    toastr.error(xhr.responseJSON?.error || 'Đã xảy ra lỗi!');
                                }
                            }
                        });
            </text>
        }
        else
        {
            <text>
                        Swal.fire({
                            title: 'Cần đăng nhập',
                            text: 'Bạn cần đăng nhập để thực hiện chức năng này.',
                            icon: 'info',
                            showCancelButton: true,
                            confirmButtonText: 'Đăng nhập',
                            cancelButtonText: 'Hủy'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Identity/Account/Login';
                            }
                        });
            </text>
        }
            });

            // Animation cho các thẻ
            $('.card').hover(
                function() {
                    $(this).addClass('shadow');
                    $(this).css('transform', 'translateY(-5px)');
                    $(this).css('transition', 'transform 0.3s ease, box-shadow 0.3s ease');
                },
                function() {
                    $(this).removeClass('shadow');
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // Animation khi load trang
            $('.timeline-item').each(function(index) {
                $(this).addClass('animate__animated animate__fadeInLeft');
                $(this).css('animation-delay', (index * 0.1) + 's');
            });
        });
    </script>
}