<div class="container mt-5">
    <h2 class="mb-4">Chi tiết bài kiểm tra</h2>
    <form method="post" action="/Exam/Submit">
        <input type="hidden" name="quizId" value="1" />
        @for (int i = 1; i <= 3; i++)
        {
            <div class="mb-3">
                <label class="form-label">Câu hỏi @i: Đây là nội dung câu hỏi?</label>
                <div>
                    @for (char c = 'A'; c <= 'D'; c++)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="answers[@(i - 1)]" value="@c" />
                            <label class="form-check-label">Đáp án @c</label>
                        </div>
                    }
                </div>
            </div>
        }
        <button type="submit" class="btn btn-success">Nộp bài</button>
    </form>
</div>
