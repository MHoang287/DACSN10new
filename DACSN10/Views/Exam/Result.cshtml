                const targetScore = @Model.Score;
                const duration = 2000;
                const increment = targetScore / (duration / 16);
                
                const timer = setInterval(() => {
                    score += increment;
                    if (score >= targetScore) {
                        score = targetScore;
                        clearInterval(timer);
                    }
                    scoreValue.textContent = score.toFixed(1);
                }, 16);
            }

            // Confetti effect for high scores
