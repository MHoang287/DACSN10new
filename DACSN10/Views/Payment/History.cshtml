<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch sử thanh toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Lịch sử thanh toán</h2>
        @if (Model.Count == 0)
        {
            <p class="text-center">Không có lịch sử thanh toán.</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@payment.CourseName</td>
                            <td>@payment.SoTien.ToString("C")</td>
                            <td>@payment.NgayThanhToan.ToString("g")</td>
                            <td>@payment.PhuongThucThanhToan</td>
                            <td>
                                @switch (payment.Status)
                                {
                                    case DACSN10.Models.PaymentStatus.Success:
                                        <span class="badge bg-success">Success</span>
                                        break;
                                    case DACSN10.Models.PaymentStatus.Pending:
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    case DACSN10.Models.PaymentStatus.Failed:
                                        <span class="badge bg-danger">Failed</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>