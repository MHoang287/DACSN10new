
@model int

@{
    ViewBag.Title = "Thanh toán khóa học";
}

<h2>Chọn phương thức thanh toán</h2>

<form asp-action="PayWithVNPAY" method="post">
    <input type="hidden" name="courseId" value="@Model" />
    <button type="submit" class="btn btn-danger">Thanh toán VNPay</button>
</form>

<form asp-action="PayWithMomo" method="post" class="mt-2">
    <input type="hidden" name="courseId" value="@Model" />
    <button type="submit" class="btn btn-primary">Thanh toán MoMo</button>
</form>

<form asp-action="PayWithVisa" method="post" class="mt-2">
    <input type="hidden" name="courseId" value="@Model" />
    <button type="submit" class="btn btn-success">Thanh toán Visa</button>
</form>
