@model DACSN10.Models.Payment
@{
    ViewData["Title"] = "Thanh toán thành công - OnlineLearning";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="~/css/PaymentReturn.css" rel="stylesheet" />
}

<div class="success-container">
    <div class="container">
        <div class="success-card" data-aos="zoom-in">
            <div class="success-header">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h2 class="mb-0">Thanh toán thành công!</h2>
                <p class="mb-0 mt-2 opacity-75">Giao dịch đã được tạo và đang chờ xử lý</p>
            </div>

            <div class="p-4">
                <!-- Chi tiết giao dịch -->
                <div class="payment-details" data-aos="fade-up" data-aos-delay="200">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-receipt me-2"></i>Chi tiết giao dịch
                    </h5>

                    <div class="row">
                        <div class="col-6">
                            <strong>Mã giao dịch:</strong><br>
                            <span class="text-primary">#@Model.PaymentID.ToString("D6")</span>
                        </div>
                        <div class="col-6 text-end">
                            <strong>Số tiền:</strong><br>
                            <span class="text-success fs-4 fw-bold">@Model.SoTien.ToString("N0")₫</span>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-book me-2 text-primary"></i>
                                <strong>Khóa học:</strong> @Model.Course.TenKhoaHoc
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-calendar me-2 text-primary"></i>
                                <strong>Thời gian:</strong> @Model.NgayThanhToan.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-mobile-alt me-2 text-primary"></i>
                                <strong>Phương thức:</strong> @Model.PhuongThucThanhToan
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-user me-2 text-primary"></i>
                                <strong>Tài khoản:</strong> @Model.User.HoTen
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Timeline trạng thái -->
                <div class="timeline" data-aos="fade-up" data-aos-delay="300">
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-tasks me-2"></i>Trạng thái xử lý
                    </h5>

                    <div class="timeline-item">
                        <div class="timeline-icon completed">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <strong>Tạo giao dịch</strong>
                            <div class="text-muted small">Đã hoàn thành</div>
                        </div>
                    </div>

                    <div class="timeline-item">
                        <div class="timeline-icon completed">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <strong>Gửi hóa đơn email</strong>
                            <div class="text-muted small">Đã gửi đến @Model.User.Email</div>
                        </div>
                    </div>

                    <div class="timeline-item">
                        <div class="timeline-icon current">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <strong>Chờ admin duyệt</strong>
                            <div class="text-warning small">Đang xử lý - Thường mất 1-24 giờ</div>
                        </div>
                    </div>

                    <div class="timeline-item">
                        <div class="timeline-icon pending">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div>
                            <strong>Kích hoạt khóa học</strong>
                            <div class="text-muted small">Sẽ thực hiện sau khi duyệt</div>
                        </div>
                    </div>
                </div>

                <!-- Thông báo -->
                <div class="alert alert-info" data-aos="fade-up" data-aos-delay="400">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle me-2"></i>Thông tin quan trọng
                    </h6>
                    <ul class="mb-0">
                        <li>Hóa đơn thanh toán đã được gửi đến email của bạn</li>
                        <li>Giao dịch đang chờ admin xác nhận và kích hoạt</li>
                        <li>Bạn sẽ nhận được email thông báo khi khóa học được kích hoạt</li>
                        <li>Thời gian xử lý thường trong vòng 24 giờ làm việc</li>
                    </ul>
                </div>

                <!-- Action buttons -->
                <div class="row" data-aos="fade-up" data-aos-delay="500">
                    <div class="col-md-4 mb-3">
                        <a asp-action="History" class="btn btn-outline-primary w-100">
                            <i class="fas fa-history me-2"></i>Lịch sử thanh toán
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseID"
                           class="btn btn-outline-secondary w-100">
                            <i class="fas fa-book me-2"></i>Về khóa học
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary w-100">
                            <i class="fas fa-home me-2"></i>Trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        // Tự động refresh trang sau 30 giây để cập nhật trạng thái
        setTimeout(function() {
            if (confirm('Bạn có muốn kiểm tra trạng thái giao dịch mới nhất?')) {
                location.reload();
            }
        }, 30000);
    </script>
}