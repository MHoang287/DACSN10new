<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Payment Method</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .payment-btn {
            height: 100px;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Select Payment Method</h2>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">@Model.TenKhoaHoc</h5>
                <p class="card-text">@Model.MoTa</p>
                <p class="card-text"><strong>Price:</strong> @Model.Gia.ToString("C")</p>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-md-4">
                <form asp-action="PayWithVNPAY" method="post">
                    <input type="hidden" name="courseId" value="@Model.CourseID" />
                    <button type="submit" class="btn btn-primary w-100 payment-btn">Pay with VNPAY</button>
                </form>
            </div>
            <div class="col-md-4">
                <form asp-action="PayWithMomo" method="post">
                    <input type="hidden" name="courseId" value="@Model.CourseID" />
                    <button type="submit" class="btn btn-danger w-100 payment-btn">Pay with MOMO</button>
                </form>
            </div>
            <div class="col-md-4">
                <form asp-action="PayWithVisa" method="post">
                    <input type="hidden" name="courseId" value="@Model.CourseID" />
                    <button type="submit" class="btn btn-success w-100 payment-btn">Pay with VISA</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
        @if (TempData["Success"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: '@TempData["Success"]',
                            confirmButtonText: 'OK'
                        });
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: '@TempData["Error"]',
                            confirmButtonText: 'OK'
                        });
            </text>
        }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>