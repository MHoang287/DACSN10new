<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách bài tập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Danh sách bài tập</h2>
        @if (ViewBag.Error != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: '@ViewBag.Error',
                });
            </script>
        }
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                Hiện tại chưa có bài tập nào trong khóa học này.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var assignment in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@assignment.TenBaiTap</h5>
                                <p class="card-text"><strong>Mô tả:</strong> @assignment.MoTa</p>
                                <p class="card-text"><strong>Hạn nộp:</strong> @assignment.HanNop.ToString("dd/MM/yyyy HH:mm")</p>
                                <a asp-action="Details" asp-route-id="@assignment.AssignmentID" class="btn btn-primary">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>