<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách bài đã nộp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Danh sách bài đã nộp</h2>
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                Bạn chưa nộp bài tập nào.
            </div>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Bài tập</th>
                        <th>Ngày nộp</th>
                        <th>File</th>
                        <th>Điểm</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model)
                    {
                        <tr>
                            <td>@submission.Assignment.TenBaiTap</td>
                            <td>@submission.NgayNop.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><a href="@submission.FileNop" target="_blank">Xem file</a></td>
                            <td>@(submission.Diem.HasValue ? submission.Diem.ToString() : "Chưa chấm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>