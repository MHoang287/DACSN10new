                        <div class="input-group">
                            <input class="form-control" type="search" name="keyword" value="@ViewBag.SearchKeyword"
                                   placeholder="Tìm kiếm khóa học..." aria-label="Search" />
                            <button class="btn" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav">
