<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineLearning</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
            <a class="navbar-brand" href="/">OnlineLearning</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/PopularCourses">Phổ biến</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/NewCourses">Mới nhất</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/MyCourses">Khóa học của tôi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/FavoriteCourses">Yêu thích</a>
                    </li>
                </ul>

                <form class="d-flex" method="get" action="/Course/SearchByName">
                    <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm khóa học..." />
                    <button class="btn btn-outline-light" type="submit">Tìm</button>
                </form>

                <ul class="navbar-nav ms-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/EditProfile">Xin chào, @User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link btn btn-link">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Register">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-5 py-4">
        <hr />
        <p class="mb-0">&copy; @DateTime.Now.Year - OnlineLearning | Một sản phẩm bởi bạn 😄</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
