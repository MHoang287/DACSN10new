@model List<DACSN10.Models.TeacherSearchViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-search"></i> Tìm kiếm giảng viên</h2>
    <form asp-action="SearchTeacher" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="Nhập tên giảng viên..." value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-chalkboard-teacher"></i> @item.Teacher.HoTen</h5>
                            <p class="card-text"><strong>Email:</strong> @item.Teacher.Email</p>
                            <form class="follow-form d-inline" data-teacher-id="@item.Teacher.Id">
                                <input type="hidden" name="teacherId" value="@item.Teacher.Id" />
                                <button type="submit" class="btn @(item.IsFollowed ? "btn-success" : "btn-outline-primary") follow-btn">
                                    <i class="fas @(item.IsFollowed ? "fa-check" : "fa-user-plus")"></i>
                                    @(item.IsFollowed ? "Đang theo dõi" : "Follow")
                                </button>
                            </form>
                            <h6 class="mt-3">Khóa học của giảng viên:</h6>
                            @if (item.Courses.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var course in item.Courses)
                                    {
                                        <li class="list-group-item">
                                            <a href="@Url.Action("Details", "Course", new { id = course.CourseID })">
                                                @course.TenKhoaHoc
                                            </a>
                                            <span class="badge bg-success float-end">@course.Gia.ToString("C")</span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có khóa học nào.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Không tìm thấy giảng viên nào.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.follow-form').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var teacherId = form.data('teacher-id');
                var isFollowed = form.find('.follow-btn').hasClass('btn-success');
                var url = isFollowed ? '@Url.Action("UnfollowTeacher", "User")' : '@Url.Action("FollowTeacher", "User")';

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });

                            // Cập nhật giao diện nút
                            var button = form.find('.follow-btn');
                            if (isFollowed) {
                                button.removeClass('btn-success').addClass('btn-outline-primary');
                                button.html('<i class="fas fa-user-plus"></i> Follow');
                            } else {
                                button.removeClass('btn-outline-primary').addClass('btn-success');
                                button.html('<i class="fas fa-check"></i> Đang theo dõi');
                            }
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Có lỗi xảy ra. Vui lòng thử lại.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    </script>
}