@model DACSN10.Models.TeacherSearchViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-chalkboard-teacher"></i> Hồ sơ giảng viên: @Model.Teacher.HoTen</h2>
    <div class="card shadow">
        <div class="card-body">
            <p><strong>Email:</strong> @Model.Teacher.Email</p>
            <p><strong>Loại người dùng:</strong> @Model.Teacher.LoaiNguoiDung</p>
            <form class="follow-form d-inline" data-teacher-id="@Model.Teacher.Id">
                <input type="hidden" name="teacherId" value="@Model.Teacher.Id" />
                <button type="submit" class="btn @(Model.IsFollowed ? "btn-success" : "btn-outline-primary") follow-btn">
                    <i class="fas @(Model.IsFollowed ? "fa-check" : "fa-user-plus")"></i>
                    @(Model.IsFollowed ? "Đang theo dõi" : "Follow")
                </button>
            </form>
            <h5 class="mt-4">Khóa học của giảng viên</h5>
            @if (Model.Courses.Any())
            {
                <ul class="list-group">
                    @foreach (var course in Model.Courses)
                    {
                        <li class="list-group-item">
                            <a href="@Url.Action("Details", "Course", new { id = course.CourseID })">
                                @course.TenKhoaHoc
                            </a>
                            <span class="badge bg-success float-end">@course.Gia.ToString("C")</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Chưa có khóa học nào.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.follow-form').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var teacherId = form.data('teacher-id');
                var isFollowed = form.find('.follow-btn').hasClass('btn-success');
                var url = isFollowed ? '@Url.Action("UnfollowTeacher", "User")' : '@Url.Action("FollowTeacher", "User")';

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });

                            // Cập nhật giao diện nút
                            var button = form.find('.follow-btn');
                            if (isFollowed) {
                                button.removeClass('btn-success').addClass('btn-outline-primary');
                                button.html('<i class="fas fa-user-plus"></i> Follow');
                            } else {
                                button.removeClass('btn-outline-primary').addClass('btn-success');
                                button.html('<i class="fas fa-check"></i> Đang theo dõi');
                            }
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi',
                                text: response.message,
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Có lỗi xảy ra. Vui lòng thử lại.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    </script>
}