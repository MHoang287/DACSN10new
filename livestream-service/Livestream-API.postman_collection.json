{
  "info": {
    "name": "Livestream Service API",
    "description": "API collection for testing the Spring Boot Livestream Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "teacherToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "studentToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "roomId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Teacher",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('teacherToken', jsonData.token);",
                  "    console.log('Teacher token saved: ' + jsonData.token.substring(0, 20) + '...');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"teacher1\",\n  \"password\": \"password123\",\n  \"email\": \"teacher1@school.edu\",\n  \"fullName\": \"John Teacher\",\n  \"role\": \"TEACHER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('studentToken', jsonData.token);",
                  "    console.log('Student token saved: ' + jsonData.token.substring(0, 20) + '...');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"student1\",\n  \"password\": \"password123\",\n  \"email\": \"student1@school.edu\",\n  \"fullName\": \"Jane Student\",\n  \"role\": \"STUDENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login Teacher",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('teacherToken', jsonData.token);",
                  "    console.log('Teacher token saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"teacher1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('studentToken', jsonData.token);",
                  "    console.log('Student token saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"student1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Room Management",
      "item": [
        {
          "name": "Create Room (Teacher)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('roomId', jsonData.roomId);",
                  "    console.log('Room ID saved: ' + jsonData.roomId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{teacherToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roomName\": \"Math Class - Algebra\",\n  \"description\": \"Introduction to Algebra concepts\",\n  \"maxParticipants\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/rooms/create",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "create"]
            }
          }
        },
        {
          "name": "Get Active Rooms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/rooms/active",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "active"]
            }
          }
        },
        {
          "name": "Get My Rooms (Teacher)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{teacherToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rooms/my-rooms",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "my-rooms"]
            }
          }
        },
        {
          "name": "Get Room Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Join Room (Student)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rooms/{{roomId}}/join",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "{{roomId}}", "join"]
            }
          }
        },
        {
          "name": "Leave Room (Student)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rooms/{{roomId}}/leave",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "{{roomId}}", "leave"]
            }
          }
        },
        {
          "name": "End Room (Teacher)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{teacherToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rooms/{{roomId}}/end",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "{{roomId}}", "end"]
            }
          }
        }
      ]
    }
  ]
}
